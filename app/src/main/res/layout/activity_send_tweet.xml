<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SendTweetActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_send_tweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/complLightColor"
>

        <EditText
            android:id="@+id/et_send_tweet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|bottom"
            android:hint="@string/sendTweet"
            android:ems="20"
            android:inputType="textPersonName"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_send_tweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:text="send tweet"
        android:backgroundTint="@color/complColor"
        android:textColor="@color/primaryTextColor"
        />

    <Button
        android:id="@+id/btn_show_other_tweets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/complColor"
        android:text="show other user's tweets"
        android:textSize="18sp"
        android:textColor="@color/primaryTextColor" />

    <ListView
        android:id="@+id/listview_others_tweets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:background="@color/secondaryColor"

        />



</LinearLayout>